<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="@drawable/download"
    android:orientation="vertical">

    <TextView
        android:text="KFC Store"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/cashier2_116164"
        android:layout_width="95dp"
        android:layout_height="95dp"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Silahkan Pilih Pengisian Saldo:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/rgItem"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbDana"
            android:text="Dana"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbShoopepay"
            android:text="Shoopepay"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rbGopay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gopay"
            android:textSize="17dp"
            android:textStyle="bold" />
    </RadioGroup>

    <EditText
        android:id="@+id/etTextPrice"
        android:layout_width="250dp"
        android:textColorHint="@color/black"
        android:layout_height="wrap_content"
        android:hint="Harga"
        android:textSize="18dp"
        android:inputType="numberDecimal" />

    <RadioButton
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:id="@+id/rbMember"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Membership"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnProcess"
        android:layout_width="250dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:backgroundTint="#BCC6CC"
        android:layout_marginTop="2px"/>

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:background="@drawable/kasie"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:textAlignment="center"
        android:id="@+id/tvNota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="2px"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="250dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:backgroundTint="#BCC6CC"
        android:layout_marginTop="25dp"/>


</LinearLayout>